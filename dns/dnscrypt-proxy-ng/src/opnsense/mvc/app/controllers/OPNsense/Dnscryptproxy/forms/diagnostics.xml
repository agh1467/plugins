<form>
    <box id="diagnostics" description="Diagnostics">
        <field>
            <id>hostname</id>
            <label>Hostname</label>
            <type>command</type>
            <style>input</style>
            <api>/api/dnscryptproxy/diagnostics/command/resolve</api>
            <button_label>Run</button_label>
            <output>resolve_command</output>
        </field>
        <field>
            <id>resolve_command</id>
            <type>commandoutput</type>
            <text>Command output will appear here.</text>
        </field>
    </box>
    <box id="show_doh_certs" description="Show DOH Certificates">
        <field>
            <id>diag_show_certs</id>
            <label>Show DoH Certificates</label>
            <type>command</type>
            <api>/api/dnscryptproxy/diagnostics/command/show-certs</api>
            <output>show_certs_command</output>
            <button_label>Run</button_label>
        </field>
        <field>
            <id>show_certs_command</id>
            <type>commandoutput</type>
            <text>Command output will apper here. Execution may take more than a minute to complete.</text>
        </field>
    </box>
    <box id="config_check" description="Configuration Check">
        <field>
            <id>config_check</id>
            <label>Check dnscrypt-proxy Configuration</label>
            <type>command</type>
            <api>/api/dnscryptproxy/diagnostics/command/config-check</api>
            <output>config_check_output</output>
            <button_label>Run</button_label>
        </field>
        <field>
            <id>config_check_output</id>
            <type>commandoutput</type>
            <text>Command output will apper here.</text>
        </field>
    </box>
    <box id="config_view" description="View Configuration">
        <field>
            <id>config_view</id>
            <label>View dnscrypt-proxy Configuration</label>
            <type>command</type>
            <style>selectpicker</style>
            <api>/api/dnscryptproxy/diagnostics/command/config-view</api>
            <options>
                <option>dnscrypt-proxy.toml</option>
                <option>allowed-ips-internal.txt</option>
                <option>allowed-ips-manual.txt</option>
                <option>allowed-names-internal.txt</option>
                <option>allowed-names-manual.txt</option>
                <option>blocked-ips-internal.txt</option>
                <option>blocked-ips-manual.txt</option>
                <option>blocked-names-internal.txt</option>
                <option>blocked-names-manual.txt</option>
                <option>captive-portals.txt</option>
                <option>cloaking-internal.txt</option>
                <option>cloaking-manual.txt</option>
                <option>forwarding-rules.txt</option>
                <option>local_doh-cert.pem</option>
                <option>local_doh-cert_key.pem</option>
                <option>public-resolvers.md</option>
                <option>relays.md</option>
            </options>
            <output>config_view_output</output>
            <button_label>View</button_label>
        </field>
        <field>
            <id>config_view_output</id>
            <type>commandoutput</type>
            <text>Configuration will apper here.</text>
        </field>
    </box>
</form>
