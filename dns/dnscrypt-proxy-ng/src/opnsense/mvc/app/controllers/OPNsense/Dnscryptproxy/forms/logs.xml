<form model="settings">
    <tab id="dnscryptproxy_logs_main" description="Main">
        <field>
            <label>/var/log/dnscrypt-proxy/main.log</label>
            <type>bootgrid</type>
            <target>main</target>
            <style></style>
            <class>logs</class>
            <columns>
                <column id="timestamp" width="11em" sortable="false">Timestamp</column>
                <column id="severity" width="5em" sortable="false">Severity</column>
                <column id="msg" width="90em" sortable="false">Message</column>
            </columns>
            <api>
                <search>/api/dnscryptproxy/log</search>
                <export>/api/dnscryptproxy/log/main/export</export>
                <clear>/api/dnscryptproxy/log/main/clear</clear>
            </api>
            <row_count>20,50,100,200,500,1000,-1</row_count>
        </field>
    </tab>
    <tab id="dnscryptproxy_logs_queries" description="Query">
        <field>
            <id>query_log.enabled</id>
            <type>checkbox</type>
            <hidden>true</hidden>
            <control>
                <action on_set="true" type="tab" do_state="visible">tab_header_dnscryptproxy_logs_queries</action>
                <action on_set="false" type="tab" do_state="hidden">tab_header_dnscryptproxy_logs_queries</action>
            </control>
        </field>
        <field>
            <label>/var/log/dnscrypt-proxy/query.log</label>
            <target>query</target>
            <type>bootgrid</type>
            <style></style>
            <class>logs</class>
            <columns>
                <column id="timestamp" width="20em" sortable="false">Timestamp</column>
                <column id="client_ip" width="13em" sortable="false">Client IP</column>
                <column id="query_name" width="64em" sortable="false">Query Name</column>
                <column id="query_type" width="10em" sortable="false">Query Type</column>
                <column id="return_code" width="10em" sortable="false">Return Code</column>
                <column id="request_duration" width="10em" sortable="false">Request Duration</column>
                <column id="server_name" width="48em" sortable="false">Server Name</column>
            </columns>
            <api>
                <search>/api/dnscryptproxy/log</search>
                <export>/api/dnscryptproxy/log/query/export</export>
                <clear>/api/dnscryptproxy/log/query/clear</clear>
            </api>
            <row_count>20,50,100,200,500,1000,-1</row_count>
        </field>
        <style>display:none</style> <!-- Tab will be hidden to begin with, and shown when logging is enabled. -->
    </tab>
